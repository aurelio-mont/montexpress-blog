---
import { Icon } from 'astro-icon/components';

---

<footer class="footer">
    <div class="footer-text">
       <p> Copyright &copy; <span id="copyright">2024</span> | All rights reserved </p>
       <span class="animate-off scroll" style="--i:1;" ></span>
    </div>

    <div class="footer-iconTop">
        <a href="#"><Icon name="up" class="i" /></a>
        <span class="animate_off scroll" style="--i:2;" ></span>
    </div>

</footer>

<script>
    const year: number = new Date().getFullYear();
    const span = document.querySelector('#copyright') as HTMLElement;
    span.innerText = `${year}`;
</script>